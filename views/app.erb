    <div class="container">
      <h1 class="text-center">Welcom to Gifoo!</h1>
      <div class="row">
        <% @urlData.each do |x| %>
          <div class="container col-md-4 col-sm-6 col-xs-12" style="padding: 20px">
            <a href="<%= x["linkurl"] %>"><img class="img-responsive" alt="gif file" src="<%= x["url"] %> " target=_blank></a>
          </div>
        <% end %>
      </div>
    </div>

<div class="container text-center" style="padding: 20px">
      <div class="footter">
      <button type="button" class="btn btn-info btn-lg"  onclick="location.reload();">Show anothre cat!  <i class="glyphicon glyphicon-refresh"></i></button>
